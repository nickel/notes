<div id="note-<%= note.id %>">
  <h1>
    <%= note.title %>
  </h1>

  <% if logged_in? %>
    <ul class="note-actions">
      <li><%= link_to "Edit this note", edit_note_path(@note.id) %></li>
      <li><%= link_to "Destroy this note", note_path(@note.id), data: { "turbo-method": :delete } %></li>
    </ul>
  <% end %>

  <div>
    Tags: <%= note.tags.map { |tag| link_to "##{tag}", notes_path(tag: tag) }.join(" ").html_safe %>
  </div>

  <% if note.private? %>
    <small>This note is private ðŸ”’</small>
  <% end %>

  <p>
    <%= MarkdownRenderer.convert_markdown(note.content).html_safe %>
  </p>
</div>
