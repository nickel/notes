<%= content_for(:title) { @note.title } %>
<%= content_for(:description) { @note.content.gsub(/(\n|\r)+/, " ").truncate(160) } %>

<% content_for(:sidebar) do %>
  <% if logged_in? %>
    <ul class="sidebar">
      <li><%= button_to "Edit this note", edit_note_path(@note), method: :get %></li>
      <li><%= button_to "Destroy this note", @note, method: :delete %></li>
    </ul>
  <% end %>
<% end %>

<%= render @note %>
